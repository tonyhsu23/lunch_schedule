<div class='flash'></div>
<h1>New Restaurant</h1>
<%= form_for @restaurant, remote: true do |f| %>
  <%= f.label :restaurant_category %>
  <%= f.select :restaurant_category_id,
    restaurant_categories %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :phone_number %>
  <%= f.telephone_field :phone_number %>

  <%= f.submit %>
<% end %>

<h1>Restaurants</h1>
<div id='restaurants'>
  <%= div_for @restaurants do |restaurant| %>
    <%= render restaurant %>
  <% end %>
</div>
