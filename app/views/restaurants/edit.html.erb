<div class="col-md-4 col-md-offset-4" >
  <div class="flash"></div>
  <h2><%= t("activerecord.edit") + @restaurant.model_name.human %></h2>
  <%= form_for @restaurant, validate: true do |f| %>
    <div class="field form-group">
      <%= f.select :restaurant_category_id,
        restaurant_categories, { include_blank: t("views.placeholder.restaurant.select_category") }, { class: 'form-control', required: true } %>
  </div>

  <div class="field form-group">
    <%= f.text_field :name, { class: 'form-control', required: true, placeholder: t("views.placeholder.restaurant.name", default: "Name") } %>
  </div>

  <div class="field form-group">
    <%= f.text_field :address, { class: 'form-control', required: true, placeholder: t("views.placeholder.restaurant.address", default: "Address") } %>
  </div>

  <div class="field form-group">
    <%= f.telephone_field :phone_number, { class: 'form-control', required: true, placeholder: t("views.placeholder.restaurant.phone", default: "Phone Number") } %>
  </div>

  <div class="field form-group">
    <%= f.submit class: 'btn btn-primary form-control' %>
  </div>

  <div class="field form-group">
    <%= link_to t("activerecord.delete"), @restaurant, method: :delete, data: { confirm: t("views.actions.destroy_confirm") }, class: 'btn btn-danger form-control' %>
  </div>
<% end %>
</div>
