<ol class="breadcrumb">
  <li><%= link_to t("views.navbar.my_event"), events_path %></li>
  <li class="active"><%= @event.date %></li>
</ol>

<div class="row">
  <div class="col-md-6">
    <h1><%= @event.date %></h1>
    <h3><%= t("views.content.participants") %>:</h3>
    <%= render @event.users %>
  </div>

  <div class="col-md-6 hero-feature">
    <div class="thumbnail">
      <iframe width="545" height="363" frmaeborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_MAP_KEY'] %>&q=<%= @event.restaurant.address %>"></iframe>
      <div class="caption">
        <h3><%= @event.restaurant.name %></h3>
        <p><%= @event.restaurant.phone_number %></p>
        <p><%= @event.restaurant.address %></p>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-lg-12">
    <h2><%= t("activerecord.models.dish") %></h2>
  </div>
  <div class="text-center">
    <%= render @event.dishes %>
  </div>
</div>
