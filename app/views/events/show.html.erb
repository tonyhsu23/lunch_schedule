<ol class="breadcrumb">
  <li><%= link_to t("views.navbar.my_event"), events_path %></li>
  <li class="active"><%= @event.date %></li>
</ol>

<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2><%= @event.date %></h2>
    <h5><%= t("views.content.participants") %>: <%= join_users(@event.users) %></h5>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-6 col-md-offset-3 hero-feature">
    <div class="thumbnail">
      <iframe width="545" height="363" frmaeborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_MAP_KEY'] %>&q=<%= @event.restaurant.address %>"></iframe>
      <div class="caption">
        <h3><%= link_to @event.restaurant.name, @event.restaurant %></h3>
        <p><%= fa_icon "phone" %> <%= @event.restaurant.phone_number %></p>
        <p><%= fa_icon "map-marker" %> <%= @event.restaurant.address %></p>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-lg-12">
    <h2><%= t("activerecord.models.dish") %></h2>
  </div>
  <div class="text-center">
    <%= render @event.dishes %>
  </div>
</div>
