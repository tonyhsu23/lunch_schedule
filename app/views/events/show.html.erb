<ol class="breadcrumb">
  <li><%= link_to 'events', events_path %></li>
  <li class="active"><%= @event.date %></li>
</ol>

<div class="row">
  <div class="col-md-6">
    <h1><%= @event.date %></h1>
    <h3>Participants:</h3>
    <%= render @event.users %>
  </div>

  <div class="col-md-6 hero-feature">
    <div class="thumbnail">
      <img src="http://placehold.it/1200x800" alt="">
      <div class="caption">
        <h3><%= @event.restaurant.name %></h3>
        <p><%= @event.restaurant.phone_number %></p>
        <p><%= @event.restaurant.address %></p>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-lg-12">
    <h2>Dishes</h2>
  </div>
  <div class="text-center">
    <%= render @event.dishes %>
  </div>
</div>
