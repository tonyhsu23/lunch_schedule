<div class="row">
  <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <h2><%= current_user.company.name %></h2>
    <hr>
    <%= div_for @events do |event| %>
      <div class="post-preview">
        <h3 class="post-title">
          <%= link_to(event.date, event) %>
        </h3>
        <h3 class="post-subtitle">
          <%= link_to(event.restaurant.name, event.restaurant) %>
        </h3>
        <p class="post-meta">Participants 
          <%= event.users.map(&:full_name).join(', ') %>
        </p>
      </div>
      <hr>
    <% end %>
  </div>
</div>
